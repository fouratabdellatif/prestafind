<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>User Print</title>
		<link href="{{ asset('admin/css/sb-admin-2.css') }}" rel="stylesheet"/>
		<link rel="stylesheet" href="{{ asset('front/css/style.css') }}"/>
	</head>
	<body>
		<header class="clearfix">
			<div id="logo">
				Presstafind
			</div>
			<h1 align="center">Presstafind - tous les Users</h1>
			<hr></hr>
		<div class="table-wrapper">
			<h1>Users</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Email</th>
						<th>Role</th>
						<th>Password</th>
						<th>Prenom</th>
						<th>Nom</th>
						<th>Adresses</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.email }}</td>
							<td>{{ user.role }}</td>
							<td>******</td>
							<td>{{ user.prenom }}</td>
							<td>{{ user.nom }}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no users found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</body>
</html>
